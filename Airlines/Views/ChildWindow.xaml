<Window x:Class="Airlines.Views.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airlines.Views"
        xmlns:behaviors="clr-namespace:Airlines.Behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" 
        Height="570" Width="930" MinHeight="300" MinWidth="470"
        d:DesignHeight="570" d:DesignWidth="930"
        Style="{StaticResource MaterialDesignWindow}"
        behaviors:WindowEx.ShowMinimizeButton="False">
    <Grid>
        <ContentPresenter Content="{Binding}"/>
    </Grid>
</Window>
